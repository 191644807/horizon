// main: main.styl

color-bg = white

color-collections = #FA7252
color-requests =  #58AFC0
color-clients = #756BB1
color-time = #61B2A7

color-grey = #BCBCBC
color-grey-line = #DCDCDC
color-grey-text = #B2B2B2

.collections {background: color-collections}
.requests {background: color-requests}
.clients {background: color-clients}
.timestamp {background: color-time}

.collections-fg {color: color-collections}
.requests-fg {color: color-requests}
.clients-fg {color: color-clients}

color-store = #1f8267
color-subscribe = #2690A0
color-remove = #96283a
color-query = #536878

/*
color-subscribe = #2690A0
color-store = #31A354
